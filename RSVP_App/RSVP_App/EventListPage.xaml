<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RSVP_App.EventListPage"
             Title="Events">
    
    <Grid RowDefinitions="Auto,Auto,*" Padding="16" RowSpacing="12">
        <!-- Header Section -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" VerticalOptions="Start">
            <Label Text="Event Hub"
                   FontSize="24"
                   FontAttributes="Bold"
                   VerticalOptions="Center" />

            <Button Grid.Column="1"
                    x:Name="AddEventButton"
                    Text="Add Event"
                    Padding="14,8"
                    CornerRadius="10" 
                    Clicked="OnAddEventClicked"
                    VerticalOptions="Center"/>
            
            <Button Grid.Column="2"
                    Text="Profile"
                    Padding="14,8"
                    CornerRadius="10"
                    Clicked="OnProfileClicked"
                    VerticalOptions="Center" />
        </Grid>
        <!-- Pending RSVPS -->
        <Frame Grid.Row="1"
               CornerRadius="14"
               Padding="14"
               HasShadow="True">

            <Grid RowDefinitions="Auto,Auto">
                <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto">
                    <Label Text="Pending RSVPs"
                           FontSize="18"
                           FontAttributes="Bold" />
                    <Label Grid.Column="1"
                            Text="{Binding PendingCountText}"
                            VerticalOptions="Center" />
                </Grid>

                <!-- If no pending events -->
                <Label Grid.Row="1"
                       Text="No Pending RSVPs"
                       IsVisible="{Binding IsPendingEmpty}"
                       Margin="0,10,0,0" />

                <!-- Pending List -->
                <CollectionView Grid.Row="1"
                                ItemsSource="{Binding PendingEvents}"
                                IsVisible="{Binding IsPendingNotEmpty}"
                                Margin="0,10,0,0"
                                SelectionMode="Single"
                                SelectionChanged="OnPendingSelectionChanged">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid ColumnDefinitions="*,Auto" Padding="10" RowSpacing="4">
                                <StackLayout Spacing="2">
                                    <Label Text="{Binding Title}" />
                                    <Label Text="{Binding WhenWhere}" />
                                </StackLayout>

                                <Button Grid.Column="1"
                                        Text="RSVP"
                                        Padding="10,6"
                                        CornerRadius="8"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.RsvpCommand}" 
                                        CommandParameter="{Binding .}"/>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Grid>
        </Frame>

        <!-- Scheduled Events -->
        <Frame Grid.Row="2"
               CornerRadius="14"
               Padding="14"
               HasShadow="True">
            <Grid RowDefinitions="Auto, *">
                <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto">
                    <Label Text="Scheduled Events"
                           FontSize="18"
                           FontAttributes="Bold" />
                    <Label Grid.Column="1"
                            Text="{Binding AcceptedCountText}"
                            VerticalOptions="Center" />
                </Grid>
                <ScrollView Grid.Row="1" Margin="0,10,0,0">
                    <VerticalStackLayout Spacing="10">

                        <!-- If no accepted events -->
                        <Label Text="No Scheduled Events"
                               IsVisible="{Binding IsAcceptedEmpty}" />

                        <!-- Accepted List -->
                        <CollectionView ItemsSource="{Binding AcceptedEvents}"
                                        IsVisible="{Binding IsAcceptedNotEmpty}"
                                        SelectionMode="Single"
                                        SelectionChanged="OnAcceptedSelectionChanged">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame CornerRadius="10" Padding="10" HasShadow="True">
                                        <Grid ColumnDefinitions="*,Auto" Padding="10" RowSpacing="4">
                                            <StackLayout Spacing="2">
                                                <Label Text="{Binding Title}" />
                                                <Label Text="{Binding WhenWhere}" />
                                            </StackLayout>
                                            <Button Grid.Column="1"
                                                Text="View Details"
                                                Padding="10,6"
                                                CornerRadius="8"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DetailsCommand}" 
                                                CommandParameter="{Binding .}" />
                                        </Grid>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </ScrollView>
            </Grid>
        </Frame>

    </Grid>
</ContentPage>