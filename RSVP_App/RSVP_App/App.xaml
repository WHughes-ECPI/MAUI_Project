<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:RSVP_App"
             x:Class="RSVP_App.App">
    <Application.Resources>
        <ResourceDictionary>
            
            <!-- Palette -->
            <Color x:Key="Primary">#2563EB</Color>
            <Color x:Key="PrimaryDark">#1E40AF</Color>
            <Color x:Key="Accent">#F59E0B</Color>
            <Color x:Key="Background">#0B1220</Color>
            <Color x:Key="Surface">#F9FAFB</Color>
            <Color x:Key="TextPrimary">#0F172A</Color>
            <Color x:Key="TextSecondary">#475569</Color>
            <Color x:Key="Border">#E2E8F0</Color>
            <Color x:Key="Danger">#EF4444</Color>
            
            <!-- Page Defaults -->
            <Style TargetType="ContentPage">
                <Setter Property="BackgroundColor" Value="{StaticResource Background}" />
                <Setter Property="Padding" Value="0" />
            </Style>
            
            <!-- Labels -->
            <Style TargetType="Label">
                <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
            </Style>
            
            <!-- Entry -->
            <Style TargetType="Entry">
                <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
                <Setter Property="PlaceholderColor" Value="{StaticResource TextSecondary}" />
                <Setter Property="BackgroundColor" Value="{StaticResource Surface}" />
                <Setter Property="Margin" Value="0,6,0,0" />
            </Style>
            
            <!-- Button -->
            <Style x:Key="PrimaryButton" TargetType="Button">
                <Setter Property="TextColor" Value="{StaticResource Surface}" />
                <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
                <Setter Property="Padding" Value="18,12" />
                <Setter Property="CornerRadius" Value="14" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="WidthRequest" Value="280" />
            </Style>

            <Style x:Key="SecondaryButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource PrimaryDark}" />
                <Setter Property="TextColor" Value="{StaticResource Surface}" />
                <Setter Property="Padding" Value="18,12" />
                <Setter Property="CornerRadius" Value="14" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="WidthRequest" Value="280" />
            </Style>

            <Style x:Key="LinkButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="Transparent" />
                <Setter Property="TextColor" Value="{StaticResource Accent}" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="FontAttributes" Value="Bold" />
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
