<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RSVP_App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RSVP_App"
    Title="RSVP_App">

    <!-- Startup Page -->
    <ShellContent
        Route="login"
        ContentTemplate="{DataTemplate local:LoginPage}" />
    
    <!-- Main Page -->
        <ShellContent
        Title="Event List"
        ContentTemplate="{DataTemplate local:EventListPage}"
        Route="events" />
    
</Shell>
